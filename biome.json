{
	"$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["./next/**/*", "./out/**/*", "node_modules/**/*"],
		"include": ["./src/**/*", "./src/**/.*", "./src/**/.*/**/*"]
		
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf",
		"ignore": ["./next/**/*", "./out/**/*", "node_modules/**/*"],
		"include": ["./src/**/*", "./src/**/.*", "./src/**/.*/**/*"]
	}
}